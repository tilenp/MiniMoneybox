<resources>
    <style name="TextAppearance.Moneybox.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/headline_6_text_size</item>
    </style>

    <style name="TextAppearance.Moneybox.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/subtitle_1_text_size</item>
    </style>

    <style name="Widget.Button.Colored.Rounded" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textColor">@drawable/button_primary_text_color</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/text_style_medium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">@dimen/line_height_button_primary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Moneybox.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
